{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo/tsbuildinfo.node.json",
    "target": "ES2020",
    "lib": ["ESNext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "auto",
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "astro.config.mjs",
    "postcss.config.cjs",
    "tailwind.config.cjs",
    ".github/workflows/download-artifacts.cjs"
  ]
}
