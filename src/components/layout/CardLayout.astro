---
import type { LayoutProps } from './Layout.astro';
import type { CardProps } from '../common';

import Layout from './Layout.astro';
import { Card } from '../common';

type Props = Omit<LayoutProps & CardProps, 'children'>;
export type CardLayoutProps = Props;

const { title, subtitle, actions } = Astro.props;
---

<Layout
  title={title}
  subtitle={subtitle}
>
  <div class='m-6'>
    <Card
      title={subtitle}
      actions={actions}
    >
      <slot />
    </Card>
  </div>
</Layout>
